    <script>
      function showTooltip(message, container) {
        const tooltip = document.createElement("span");
        tooltip.innerText = message;
        tooltip.className =
          "tooltip absolute bg-black text-white text-xs px-2 py-1 rounded z-10";
        container.style.position = "relative";
        tooltip.style.top = "-2rem";
        tooltip.style.right = "0.5rem";
        container.appendChild(tooltip);
        setTimeout(() => tooltip.remove(), 1500);
      }

      function copyBoxIP(event) {
        const container = event.currentTarget;
        const ip = container.dataset.ip;
        copyToClipboard(ip);
        showTooltip("Copied to your clipboard", container);
      }

      function copyToClipboard(text) {
        if (navigator.clipboard && window.isSecureContext) {
          // Modern clipboard API with secure context
          return navigator.clipboard.writeText(text).catch((err) => {
            console.error('Clipboard writeText failed:', err);
          });
        } else {
          // Fallback for non-secure context or older browsers
          return new Promise((resolve, reject) => {
            const textarea = document.createElement('textarea');
            textarea.value = text;

            // Avoid scrolling to bottom
            textarea.style.position = 'fixed';
            textarea.style.top = '0';
            textarea.style.left = '0';
            textarea.style.width = '1px';
            textarea.style.height = '1px';
            textarea.style.opacity = '0';

            document.body.appendChild(textarea);
            textarea.focus();
            textarea.select();

            try {
              const success = document.execCommand('copy');
              document.body.removeChild(textarea);
              if (success) {
                resolve();
              } else {
                reject(new Error('Fallback: Copy command was unsuccessful'));
              }
            } catch (err) {
              document.body.removeChild(textarea);
              reject(new Error('Fallback: Copy command failed: ' + err));
            }
          });
        }
      }

      const socket = io({
        auth: {
          token: '<%= printerName %>',
        },
      });

      socket.on("new-image", (data) => {
        displayImage(data.filename);
      });

      function displayImage(filename) {
        document.getElementById("loader").style.display = "none";
        const container = document.getElementById("image-container");

        const receiptDiv = document.createElement("div");
        receiptDiv.className = "w-full max-w-3xl bg-white/90  rounded-xl shadow-lg p-6 mb-6 text-center";

        const img = document.createElement("img");
        img.style.display = "inline-block";
        img.src = filename;

        receiptDiv.appendChild(img);
        container.prepend(receiptDiv);

        const audio = new Audio("/receipt.m4a");
        audio.play();
      }

      document.addEventListener("DOMContentLoaded", () => {
  const form = document.getElementById("printer-config-form");
  const message = document.getElementById("config-message");
  const customEnabled = document.getElementById("custom-enabled");

  function updateFormVisibility() {
    if (customEnabled.checked) {
      form.classList.remove("hidden");
    } else {
      form.classList.add("hidden");
    }
  }

  let latestConfig =  null;

  fetch(`/config/<%= printerName %>`) //TODO Replace with EJS template call to avoid this request 
    .then((res) => res.json())
    .then((data) => {
      if (data?.config) {
       
        data = data.config
        latestConfig = data

      
        customEnabled.checked = data.enabled ?? false;
        updateFormVisibility();

        document.getElementById("success").value = String(data.success?? true);
        document.getElementById("code").value = data.code || "";
        document.getElementById("status").value = data.status || "";
        document.getElementById("battery").value = data.battery || "";
      }
    })
    .catch((err) => console.error("Failed to load config:", err));

  customEnabled.addEventListener("change", () => {
 updateFormVisibility();


if(latestConfig){
  latestConfig.enabled  = customEnabled.checked;

      fetch(`/config/<%= printerName %>`, {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(latestConfig),
    }) .catch((err) => {
        console.error("Error saving config:", err);

      });

}

  });

  form.addEventListener("submit", (e) => {
    e.preventDefault();
  
    const config = {
      enabled:  customEnabled.checked,
      success:  form.success.value.toLowerCase()==="true",
      code: form.code.value,
      status: form.status.value,
      battery: form.battery.value,
    };

      console.log("--->"+form.success.value,config)

    fetch(`/config/<%= printerName %>`, {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(config),
    })
      .then((res) => {
        if (!res.ok) throw new Error("Save failed");
        return res.json();
      })
      .then(() => {
       latestConfig = config
      })
      .catch((err) => {
        console.error("Error saving config:", err);
   
      });
  });
});
  
